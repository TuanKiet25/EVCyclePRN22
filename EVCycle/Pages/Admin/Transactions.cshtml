@page
@model EVCycle.Pages.Admin.TransactionsModel
@{
    ViewData["Title"] = "Quản lý Giao dịch & Hoa hồng";
    ViewData["AdminTitle"] = "Quản lý Giao dịch";
}

<h1 class="text-primary mb-4">@ViewData["AdminTitle"]</h1>

<div class="card shadow-sm border-0 p-4">
    <div class="d-flex justify-content-between mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" placeholder="Tìm kiếm theo Mã GD/Email">
        </div>
        <div class="btn-group">
            <button class="btn btn-outline-primary-custom">Tất cả</button>
            <button class="btn btn-outline-success">Hoàn thành</button>
            <button class="btn btn-outline-warning">Chờ thanh toán</button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="bg-light">
                <tr>
                    <th>Mã GD</th>
                    <th>Sản phẩm</th>
                    <th>Giá trị</th>
                    <th>Hoa hồng (2%)</th>
                    <th>Trạng thái</th>
                    <th>Ngày GD</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>GD005</td>
                    <td>VF e34 (2022)</td>
                    <td>750,000,000</td>
                    <td>15,000,000</td>
                    <td><span class="badge bg-success">Hoàn thành</span></td>
                    <td>10/10/2025</td>
                    <td>
                        <a asp-page="/Transaction/Detail" asp-route-id="5" class="btn btn-sm btn-outline-info">Chi tiết</a>
                    </td>
                </tr>
                <tr>
                    <td>GD006</td>
                    <td>Pin 45 kWh</td>
                    <td>160,000,000</td>
                    <td>3,200,000</td>
                    <td><span class="badge bg-warning text-dark">Chờ TT</span></td>
                    <td>11/10/2025</td>
                    <td>
                        <button class="btn btn-sm btn-primary-custom">Xử lý</button>
                    </td>
                </tr>
                </tbody>
        </table>
    </div>
</div>